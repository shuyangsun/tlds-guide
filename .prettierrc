{
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 80,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "plugins": ["prettier-plugin-sh"],
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "proseWrap": "always",
        "embeddedLanguageFormatting": "auto"
      }
    },
    {
      "files": "*.{yaml,yml}",
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": "*.sh",
      "options": {
        "parser": "sh",
        "indent": 2,
        "binaryNextLine": true,
        "switchCaseIndent": true,
        "spaceRedirects": true,
        "minify": false,
        "functionNextLine": false
      }
    }
  ]
}
